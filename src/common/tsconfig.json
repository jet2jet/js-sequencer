{
  "compilerOptions": {
    "baseUrl": "..",
    "charset": "utf-8",
    "declaration": true,
    "downlevelIteration": true,
    "lib": ["es2015", "dom"],
    "newLine": "LF",
    "module": "es6",
    "moduleResolution": "node",
    "outDir": "../../dist/lib",
    "paths": {
      "*": [
        "../reference/*",
        "../node_modules/*"
      ]
    },
    "plugins": [
      {
        "name": "typescript-tslint-plugin",
        "alwaysShowRuleFailuresAsWarnings": false,
        "ignoreDefinitionFiles": true
      }
    ],
    "removeComments": false,
    "rootDir": "..",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "stripInternal": true,
    "target": "es5",
    "typeRoots": [
      "../../typings"
    ]
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
