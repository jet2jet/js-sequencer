{
  "compilerOptions": {
    "declaration": true,
    "lib": ["es2015", "webworker"],
    "newLine": "LF",
    "module": "es6",
    "moduleResolution": "bundler",
    "outDir": "../../dist/lib",
    "paths": {
      "js-synthesizer/*": ["../../node_modules/js-synthesizer/dist/lib/*"],
      "*": ["../../reference/*", "../../node_modules/*"]
    },
    "removeComments": false,
    "rootDir": "..",
    "rootDirs": [".", "../common"],
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "stripInternal": true,
    "target": "es5",
    "typeRoots": ["../../typings"]
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
}
